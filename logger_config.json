{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(levelname)s | %(asctime)s | %(message)s"
      },
      "json": {
        "format": "%(message)s"
      }
    },
    "handlers": {
      "stdout": {
        "class": "logging.StreamHandler",
        "formatter": "standard",
        "level": "INFO"
      },
      "json_file": {
        "encoding": "utf-8",
        "class": "logging.FileHandler",
        "formatter": "json",
        "level": "INFO",
        "filename": "logs/log",
        "mode": "a"
      }
    },
    "root": {
      "level": "INFO",
      "handlers": [
        "stdout",
        "json_file"
      ]
    }
}